@model IEnumerable<IOTply.Models.EmployeeReg>
@{
    ViewData["Title"] = "ProfileMng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6">
            <h3 class="text-primary empat">Employee Attendance</h3>

            @if (Model.Count() > 0)
            {
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Mobile</th>
                            <th scope="col">Post</th>
                            <th scope="col">Address</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.EmpName</td>
                                <td>@item.MobileNo</td>
                                <td>@item.Post</td>
                                <td>@item.Address</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

        </div>
        <div class="col-lg-6">
            <a class="btn btn-primary text-light" asp-controller="Employee" asp-action="Create" style="margin-top: 10%; margin-left: 5%;">Add A User</a>
        </div>
    </div>
</div>