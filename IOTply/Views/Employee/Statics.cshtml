@model IEnumerable<IOTply.Models.LogDetails>
@{
    ViewData["Title"] = "Statics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6">
            <h3 class="text-primary empat">Employee Attendance</h3>
            @if (Model.Count() > 0)
            {
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Employee ID</th>
                            <th scope="col">Arrival Time</th>
                            <th scope="col">Temperature</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FingerPrintID</td>
                                <td>@item.Time</td>
                                <td>@item.Temperature</td>
                            </tr>
                        }

                    </tbody>
                </table>
            }
        </div>
        <div class="col-lg-6">
            <div class="row">
                <div class="col-md-6">
                    <div class="ml-5 mb-2 border">
                        <div class="unusual-content form-group">
                            <h5 class="text-primary">Employee ID</h5>
                            <input type="text" class="form-control" placeholder="20244" />
                            <a class="btn btn-primary btn-block mt-3 text-light" asp-controller="Home" asp-action="IndiStatics">Search</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="ml-5 border">
                        <div class="unusual-content form-group">
                            <h5 class="text-primary">Absentees</h5>
                            <input type="text" class="form-control" placeholder="20244" />
                            <a class="btn btn-primary btn-block mt-3 text-light">Search</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="ml-5 border">
                        <div class="unusual-content form-group">
                            <h5 class="text-primary">Date</h5>
                            <input type="text" class="form-control" placeholder="YYYY-MM-DD" />
                            <a class="btn btn-primary btn-block mt-3 text-light">Search</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="ml-5 border">
                        <div class="unusual-content form-group">
                            <h5 class="text-primary">Temperature</h5>
                            <input type="text" class="form-control" placeholder="32.23" />
                            <a class="btn btn-primary btn-block mt-3 text-light">Search</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="ml-5 mt-5 homebarchart">
                    <h4 class="text-center mt-2 mb-4">Last 30 Days Attendance Rates</h4>
                    <canvas id="myChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    //setup block
    const data = {
        labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
        datasets: [{
            label: '# of Votes',
            data: [12, 19, 3, 5, 2, 3],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    };

    //config block
    const config = {
        type: 'bar',
        data,
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            },

            plugins: {
                legend: {
                    display: false
                }
            }
        }
    }

    //render block
    const myChart = new Chart(
        document.getElementById('myChart'),
        config
    );
</script>
