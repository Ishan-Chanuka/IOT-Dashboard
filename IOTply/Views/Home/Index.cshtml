@model IEnumerable<IOTply.Models.LogDetails>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <h3 class="text-primary empat">Employee Attendance</h3>
            @if (Model.Count() > 0)
            {
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Employee ID</th>
                            <th scope="col">Arrival Time</th>
                            <th scope="col" class="text-center">Temperature</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @if (item.TempStatus == "High")
                                {
                                    <td class="text-danger font-weight-bold">@item.FingerPrintID</td>
                                    <td class="text-danger font-weight-bold">@item.Time</td>
                                    <td class="text-center text-danger font-weight-bold">@item.Temperature</td>
                                }
                                else
                                {
                                    <td>@item.FingerPrintID</td>
                                    <td>@item.Time</td>
                                    <td class="text-center">@item.Temperature</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
        <div class="col-lg-4">
            <div class="row">
                <div class="ml-5 border">
                    <div class="unusual-content">
                        <h5 class="text-primary">Unusual Temperatures</h5>
                        @if (Model.Count() > 0)
                        {
                            <table class="table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">Employee ID</th>
                                        <th scope="col">Temperature</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var i in Model)
                                    {
                                        if (i.TempStatus == "High")
                                        {
                                            <tr>
                                                <td class="text-danger font-weight-bold">@i.FingerPrintID</td>
                                                <td class="text-danger text-center font-weight-bold">@i.Temperature</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


