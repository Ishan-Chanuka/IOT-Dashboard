@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <h3 class="text-primary empat">Employee Attendance</h3>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Employee ID</th>
                        <th scope="col">Arrival Time</th>
                        <th scope="col">Temperature</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>20244</td>
                        <td>10.00</td>
                        <td>32 C</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <div class="row">
                <div class="ml-5 border">
                    <div class="unusual-content">
                        <h5 class="text-primary">Unusual Temperatures</h5>
                        <table class="table">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Employee ID</th>
                                    <th scope="col">Temperature</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr>
                                    <td class="text-danger">20275</td>
                                    <td class="text-danger">38 C</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="ml-5 mt-5 homepichart">
                    <h4 class="text-center mt-2 mb-4">Today's Attendance Rate</h4>
                    <canvas id="myChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    //setup block

    const data = {
        labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
        datasets: [{
            label: '# of Votes',
            data: [12, 19, 3, 5, 2, 3],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    };

    //options block

    const options = {
        plugins: {
            legend: {
                display: false
            }
        }
    };

    //config block

    const config = {
        type: 'pie',
        data,
        options
    };

    //render block

    const myChart = new Chart(
        document.getElementById("myChart"),
        config
    );
</script>
